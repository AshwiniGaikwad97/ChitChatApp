<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color of the EditText -->
    <solid android:color="#FFFFFF"/>

    <!-- Border of the EditText -->
    <stroke
        android:width="2dp"
        android:color="#FF6200EE"/> <!-- Change this to your preferred border color -->

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

</shape>
